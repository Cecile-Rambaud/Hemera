<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/light_radius" />
            <stroke android:width="@dimen/strong_corner"
                android:color="#1EE9C0" />
            <gradient android:angle="@dimen/gradient_angle_max"
                android:startColor="#FF5E5B"
                android:centerColor="#FF8555"
                android:endColor="#D62D20" />
            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/light_radius" />
            <stroke android:width="0dip"
                android:color="#009688" />
            <solid android:color="@color/colorAccent"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/light_radius" />
            <stroke android:width="0dp"
                android:color="@color/colorAccent" />
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#069519"
                android:centerColor="#149E67"
                android:endColor="#276BA6"
                android:gradientRadius="100%p" />
            <padding
                android:left="10dp"
                android:top="5dp"
                android:right="10dp"
                android:bottom="5dp" />
        </shape>
    </item>
</selector>
