<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/light_radius" />
            <gradient android:angle="@dimen/gradient_angle_mid"
                android:startColor="@color/greenDark"
                android:endColor="@color/greenLight"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/light_radius" />
            <gradient android:angle="@dimen/gradient_angle_mid"
                android:startColor="@color/redSpace"
                android:endColor="@color/pinkDark"  />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/light_radius" />
            <stroke android:width="0dp"
                android:color="#00FFFFFF" />
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#3CB610"
                android:centerColor="#2F8A75"
                android:endColor="#3041DA"
                android:gradientRadius="100%" />
        </shape>
    </item>
</selector>