<?xml version="1.0" encoding="utf-8"?>
<resources>
    // Add button
    <style name="ButtonStyle">
        <item name="android:background">@drawable/btn_rounded_button</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="android:textColor">@color/black</item>
    </style>

    // Detail text
    <style name="DetailTextStyle">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/s_font</item>
        <item name="android:letterSpacing">1</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/nunito_light</item>
    </style>
    <style name="DetailTextStyleBlack">
        <item name="android:textColor">@color/textColorItemDark</item>
        <item name="android:textSize">@dimen/s_font</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
    </style>

    // Default text
    <style name="DefaultTextStyle">
        <item name="android:textColor">@color/textColorItem</item>
        <item name="android:textSize">@dimen/s_font</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
    </style>
    <style name="DefaultTextStyleItalic">
        <item name="android:textColor">@color/textColorItem</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textStyle">italic</item>
    </style>

    // Current text
    <style name="CurrentTextStyle">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:paddingBottom">@dimen/xxs</item>
        <item name="android:paddingTop">@dimen/xxs</item>
        <item name="android:paddingLeft">@dimen/xs</item>
        <item name="android:paddingRight">@dimen/xs</item>
        <item name="android:textSize">@dimen/xs_font</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="fontWeight">200</item>
        <item name="textAllCaps">true</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
    </style>
    <style name="CurrentTextStyleBlack">
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingBottom">@dimen/xxs</item>
        <item name="android:paddingTop">@dimen/xxs</item>
        <item name="android:paddingLeft">@dimen/xs</item>
        <item name="android:paddingRight">@dimen/xs</item>
        <item name="android:textSize">@dimen/xs_font</item>
        <item name="fontWeight">500</item>
        <item name="textAllCaps">true</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
    </style>

    // Subtitle
    <style name="SubtitleTextStyle">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/s_font</item>
        <item name="android:fontFamily">@font/spacegrotesk</item>
        <item name="fontWeight">100</item>
    </style>
    <style name="SubtitleTextStyleBlack">
        <item name="android:textColor">@color/textColorItemDark</item>
        <item name="android:textSize">@dimen/l_font</item>
        <item name="android:fontFamily">@font/spacegrotesk</item>
    </style>

    // Name
    <style name="NameTextStyle">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/m_font</item>
        <item name="android:fontFamily">@font/spacegrotesk</item>
        <item name="fontWeight">100</item>
    </style>

    // Title
    <style name="TitleTextStyle">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/xl_font</item>
        <item name="android:paddingTop">@dimen/s_font</item>
        <item name="android:fontFamily">@font/spacegrotesk</item>
    </style>

    // Form
    <style name="AddFormStyle">
        <item name="android:textSize">@dimen/s_font</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="AddFormStyleLabel">
        <item name="android:textSize">@dimen/s_font</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    // Normal text
    <style name="NormalTextStyle">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/s_font</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
    </style>

    // Alert text
    <style name="CustomAlertDialog">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">#AB000000</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/m_font</item>
        <item name="fontFamily">@font/nunito_regular</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="CustomAlertDialog.PositiveButton" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/btn_rounded_positive_button</item>
    </style>
    <style name="CustomAlertDialog.NegativeButton" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/app_bg_deux</item>
    </style>
</resources>